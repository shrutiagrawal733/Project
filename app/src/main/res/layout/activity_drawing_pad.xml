<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" android:background="#ffc3a0">

    <TextView
        android:id="@+id/drawtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/paintView"
        android:layout_gravity="center"
        android:text="Choose brushes from menu and start drawing!"
        android:textStyle="bold|italic"
        android:textSize="15dp"
        android:padding="5dp"
        android:layout_marginTop="15dp"/>
<LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="wrap_content">
    <com.example.dopamineproject.PaintView
        android:layout_marginTop="5dp"
        android:id="@+id/paintView"
        android:layout_gravity="center"
        android:layout_below="@+id/drawtext"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>